{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://automation-blueprints.dev/schema/v0.1",
  "title": "Automation Blueprint DSL v0.1",
  "type": "object",
  "properties": {
    "id": { "type": "string", "pattern": "^[a-zA-Z0-9-_]+$" },
    "name": { "type": "string", "minLength": 3 },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "apps": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    },
    "scopes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "retry": {
      "type": "object",
      "properties": {
        "attempts": { "type": "integer", "minimum": 1 },
        "delayMs": { "type": "integer", "minimum": 0 }
      },
      "required": ["attempts", "delayMs"],
      "additionalProperties": false
    },
    "policies": { "type": "object" },
    "trigger": {
      "type": "object",
      "properties": {
        "app": { "type": "string" },
        "event": { "type": "string" },
        "filters": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "field": { "type": "string" },
              "operator": { "type": "string" },
              "value": {}
            },
            "required": ["field", "operator", "value"],
            "additionalProperties": false
          }
        }
      },
      "required": ["app", "event"],
      "additionalProperties": false
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "app": { "type": "string" },
          "action": { "type": "string" },
          "condition": { "type": "string" },
          "inputs": { "type": "object" },
          "outputs": {
            "type": "array",
            "items": { "type": "string" }
          },
          "transforms": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": { "type": "string" },
                "operation": { "type": "string" },
                "value": {}
              },
              "required": ["field", "operation"],
              "additionalProperties": true
            }
          }
        },
        "required": ["id", "app", "action"],
        "additionalProperties": true
      }
    },
    "fixtures": { "type": "object" },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "input": {},
          "expectations": { "type": "array" }
        },
        "required": ["name", "input"],
        "additionalProperties": true
      }
    },
    "compatibility": { "type": "object" }
  },
  "required": ["id", "name", "version", "apps", "trigger", "steps"],
  "additionalProperties": false
}
